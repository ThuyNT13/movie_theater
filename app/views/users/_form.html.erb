<div>
  <%= form_for(@user, url: signup_path) do |f| %>
    <%= render 'errors' %>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
