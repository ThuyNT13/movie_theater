<% provide(:title, 'Log in') %>

  <article class="article">
    <h1><%= yield(:title) %></h1>
    <div>
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Log in" %>
      <% end %>
    </div>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </article>
